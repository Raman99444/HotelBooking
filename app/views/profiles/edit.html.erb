<h2>Edit Profile</h2>

<%= form_for(@user, url: profile_path, html: { method: :put, class: "form-horizontal", data: { turbo: false } }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :gender, class: "form-label" %>
      <%= f.select :gender, options_for_select([['Male', 'male'], ['Female', 'female'], ['Other', 'other']], selected: f.object.gender), { prompt: 'Select Gender' }, { class: "form-select", 'aria-label': "Default select example" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, class: "form-control", rows: 3 %>
    </div>
    <div class="col-md-6">
      <%= f.label :pincode, class: "form-label" %>
      <%= f.text_field :pincode, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :state, class: "form-label" %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      <small class="form-text text-muted">Leave blank if you don't want to change it</small>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label :current_password, class: "form-label" %>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
      <small class="form-text text-muted">We need your current password to confirm your changes</small>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12 text-right">
      <%= f.submit "Update", style: "display: inline-flex; align-items: center; justify-content: center; height: 40px; width: 120px; padding: 10px 20px; text-align: center; font-size: 16px; background-color: #007bff; color: white; border: 1px solid transparent; border-radius: 4px;" %>
      <%= link_to 'Back', profile_path, style: "display: inline-flex; align-items: center; justify-content: center; height: 40px; width: 120px; padding: 10px 20px; text-align: center; font-size: 16px; background-color: #6c757d; color: white; border: 1px solid transparent; border-radius: 4px;" %>
    </div>
  </div>
<% end %>
