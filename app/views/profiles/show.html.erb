<div class="profile-container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h5 class="text-muted">Basic Information</h5>
    </div>
  </div>

  <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
    <div class="card mt-3" style="border: none; box-shadow: none;">
      <div class="card-body">
        <div class="mb-3">
          <strong>Name:</strong> <%= @user.name %>
        </div>
        <div class="mb-3">
          <strong>Gender:</strong> <%= @user.gender %>
        </div>
        <div class="mb-3">
          <strong>Address:</strong> <%= @user.address %>
        </div>
        <div class="mb-3">
          <strong>Pincode:</strong> <%= @user.pincode %>
        </div>
        <div class="mb-3">
          <strong>State:</strong> <%= @user.state %>
        </div>
        <hr>
        <div class="text-right">
          <%= link_to 'Edit', edit_profile_path, style: "display: inline-flex; align-items: center; justify-content: center; height: 40px; width: 120px; padding: 10px 20px; text-align: center; font-size: 16px; background-color: #007bff; color: white; border: 1px solid transparent; border-radius: 4px;" %>
        </div>
      </div>
    </div>
  </div>
</div>
