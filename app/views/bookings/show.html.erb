<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <div class="card-body text-center">
          <%= image_tag 'default_profile.jpg', class: 'img-fluid rounded-circle mb-3' %>
          <h4 class="card-title"><%= current_user.name %></h4>
          <ul class="nav flex-column">
            <li class="nav-item">
              <%= link_to 'Profile', profile_path, class: 'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to 'My Bookings', my_bookings_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>