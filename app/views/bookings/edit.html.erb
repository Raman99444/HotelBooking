<!-- app/views/bookings/edit.html.erb -->

<h2>Edit Booking</h2>

<%= form_for @booking do |f| %>
  <div class="form-group">
    <%= f.label :hotel_name %>
    <%= f.text_field :hotel_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :currency %>
    <%= f.text_field :currency, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :arrival_date %>
    <%= f.date_field :arrival_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :departure_date %>
    <%= f.date_field :departure_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :guest_name %>
    <%= f.text_field :guest_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :guest_email %>
    <%= f.email_field :guest_email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Update Booking", class: 'btn btn-primary mb-2' %>
  </div>
<% end %>

<%= link_to 'Back', my_bookings_path, class: 'btn btn-secondary' %>
